<div class="sales-transaction-wrapper">

<p>
  <strong>Supplier Name:</strong>
  <%= @supplier.name %>
</p>
 
<p>
  <strong>Phone Number:</strong>
  <%= @supplier.phone_number %>
</p>

<div class="col-sm-12">
	<h2>Products</h2>
	<div class="product-list">
		<div class="pl-head pl-head-1">Product Code</div>
		<div class="pl-head pl-head-2">Product Name</div>
		<div class="pl-head pl-head-3">Price</div>
		<div class="pl-head pl-head-4">Quantity</div>
		<div class="pl-head pl-head-5">Actions</div>
		<% @supplier.products.each do |product| %>
			<div class="pl-text pl-text-1"><%= product.product_code %></div>
			<div class="pl-text pl-text-2"><%= product.product_name %></div>
			<div class="pl-text pl-text-3"><%= product.price %></div>
			<div class="pl-text pl-text-4"><%= product.quantity %></div>
			<div class="pl-text pl-text-5 action action-i">Show</div>
			<div class="pl-text pl-text-5 action action-i">Edit</div>
			<div class="pl-text pl-text-5 action action-i">Delete</div>
		<% end %>
	</div>
</div>
<br /><br />
<div class="col-sm-12">
<h2>Add a product:</h2>
<%= form_for([@supplier, @supplier.products.build]) do |f| %>
  <p>
    <%= f.label :product_name %><br>
    <%= f.text_field :product_name %>
  </p>
  <p>
    <%= f.label :product_code %><br>
    <%= f.text_field :product_code %>
  </p>
  <p>
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :quantity %><br>
    <%= f.text_field :quantity %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

</div>

<br /><br />
<%= link_to 'Edit', edit_supplier_path(@supplier), :class => "btn" %>
<%= link_to 'Back', suppliers_path, :class => "btn" %>

</div>
