
<div class="sales-transaction-wrapper">

<h1>Listing suppliers</h1>

<%= link_to 'Back', root_path, :class => "btn" %>
<%= link_to 'New supplier', new_supplier_path, :class => "btn" %>
 
<table>
  <tr>
    <th>Name</th>
    <th>Phone Number</th>
    <th colspan="3"></th>
  </tr>
 
  <% @suppliers.each do |supplier| %>
    <tr>
      <td><%= supplier.name %></td>
      <td><%= supplier.phone_number %></td>
      <td><%= link_to 'Show', supplier_path(supplier) %></td>
      <td><%= link_to 'Edit', edit_supplier_path(supplier) %></td>
      <td><%= link_to 'Destroy', supplier_path(supplier),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

</div>